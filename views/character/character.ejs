<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <img src="/assets/img/characters/<%= character.image %>" alt="Image character '<% character.name %>'" class="img-fluid">
        <div class="card-body">
            <p class="card-text">
                <%= character.content.length >= 150 ? character.content.slice(0, 150) + '...' : character.content %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a href="/character/show/<%= character.id %>" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-muted">
                    <%= moment(character.created_at).fromNow() %>
                </small>
            </div>
        </div>
    </div>
</div>