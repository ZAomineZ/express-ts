<%- include ('../common/header.ejs') %>

<div class="container marketing pt-5">
    <h1>Les Categories</h1>
    <div class="row pt-5">
        <% categories.forEach(function (category) { %>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="/assets/img/category/<%= category.image !== null ? category.image : 'one-piece.jpg' %>" alt="Image CatÃ©gorie" width="350" height="250">
                    <div class="card-body">
                        <p class="card-text">
                            <%= category.content.length >= 150 ? category.content.slice(0, 150) + '...' : category.content %>
                        </p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/category/show/<%= category.id %>" type="button" class="btn btn-sm btn-outline-secondary">View</a>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                            </div>
                            <small class="text-muted">
                                <%= moment(category.created_at).fromNow() %>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ('../common/footer.ejs') %>
