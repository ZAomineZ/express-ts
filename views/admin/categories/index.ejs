<%- include('../Common/header.ejs') %>

<h1>
    Categories
    <a href="/admin/category/create" class="btn btn-success">Create Category</a>
</h1>
<div id="dashboard">
    <table class="table mt-4">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Slug</th>
            <th scope="col">Content</th>
            <th scope="col">Image</th>
            <th scope="col">Date</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% categories.forEach(function (category, key) { %>
            <tr>
                <th scope="row"><%= key + 1 %></th>
                <th><%= category.name %></th>
                <th><%= category.slug %></th>
                <th>
                    <%= category.content.length >= 150 ? category.content.slice(0, 150) + '...' : category.content %>
                </th>
                <th>
                    <img src="/assets/img/category/<%= category.image %>" class="rounded img-64"
                         alt="Image character '<%= category.name %>'">
                </th>
                <th>
                    <%= moment(category.created_at).format('MMMM Do YYYY, h:mm:ss') %>
                </th>
                <th>
                    <a href="/admin/category/update/<%= category.id %>" class="btn btn-primary">Edit</a>
                </th>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<%- include('../Common/footer.ejs') %>