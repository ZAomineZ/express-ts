<%- include('../Common/header.ejs') %>

<h1>Characters</h1>
<div id="dashboard">
    <table class="table mt-4">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Size</th>
            <th scope="col">Category</th>
            <th scope="col">Content</th>
            <th scope="col">image</th>
            <th scope="col">Date</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% characters.forEach(function (character, key) { %>
            <tr>
                <th scope="row"><%= key + 1 %></th>
                <th><%= character.characterName %></th>
                <th><%= character.age %></th>
                <th><%= character.size %></th>
                <th><%= character.categoryName %></th>
                <th>
                    <%= character.content.length >= 150 ? character.content.slice(0, 150) + '...' : character.content %>
                </th>
                <th>
                    <img src="/assets/img/characters/<%= character.image %>" class="rounded img-64"
                         alt="Image character '<%= character.characterName %>'">
                </th>
                <th>
                    <%= moment(character.created_at).format('MMMM Do YYYY, h:mm:ss') %>
                </th>
                <th>
                    <a href="/admin/character/update/<%= character.id %>" class="btn btn-primary">Edit</a>
                </th>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<%- include('../Common/footer.ejs') %>