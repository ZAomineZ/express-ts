<%- include ../Common/header.ejs %>

<h1>
    Characters
    <a href="/admin/character/create" class="btn btn-success">Create Character</a>
</h1>

<!-- MESSAGE FLASH -->
<%- include ../../flash.ejs %>

<div id="dashboard">
    <table class="table mt-4">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Size</th>
            <th scope="col">Category</th>
            <th scope="col">Content</th>
            <th scope="col">image</th>
            <th scope="col">Date</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% characters.forEach(function (character, key) { %>
            <tr>
                <td><%= key + 1 %></td>
                <td><%= character.characterName %></td>
                <td><%= character.age %></td>
                <td><%= character.size %></td>
                <td><%= character.categoryName %></td>
                <td>
                    <p><%= character.content.length >= 50 ? character.content.slice(0, 50) + '...' : character.content %></p>
                </td>
                <td>
                    <img src="/assets/img/characters/<%= character.image %>" class="rounded img-64"
                         alt="Image character '<%= character.characterName %>'">
                </td>
                <td>
                    <%= moment(character.created_at).format('MMMM Do YYYY, h:mm:ss') %>
                </td>
                <td>
                    <a href="/admin/character/update/<%= character.id %>" class="btn btn-primary">Edit</a>
                    <a href="/admin/character/delete/<%= character.id %>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    <%- include ../../pagination.ejs %>
</div>

<%- include ../Common/footer.ejs %>